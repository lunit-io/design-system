{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "target": "esnext",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types",
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/stories/**",
    "src/**/__tests__/**/*.ts",
    "src/**/__tests__/**/*.tsx"
  ]
}
