{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "target": "esnext",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types",
    "jsx": "react-jsx"
  },
  "include": ["src/**/*", "generated/**/*"],
  "exclude": [
    "src/**/*.stories.mdx",
    "src/**/*.stories.ts",
    "src/**/*.stories.tsx",
    "src/**/__tests__/**/*.ts",
    "src/**/__tests__/**/*.tsx"
  ]
}
